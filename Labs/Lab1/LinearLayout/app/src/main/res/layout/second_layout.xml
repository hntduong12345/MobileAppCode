<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="20">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.35"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#DDDB59"
            android:text="1"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#7A7607"
            android:text="2"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.55"
        android:orientation="vertical"
        android:weightSum="9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#CA73CB"
            android:text="3"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#F7F800"
            android:text="4"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#F90000"
            android:text="5"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#A85733"
            android:text="6"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#E9BDAC"
            android:text="7"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textAlignment="center"
            android:gravity="center"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#110CEE"
            android:text="NodeJS"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="#26D8EA"
            android:textSize="35sp"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>
</LinearLayout>